@model ExceptionVm
@{
    Layout = null;
}

@if (ViewData["isModal"] as bool? == true)
{
    <div class="card text-bg-dark text-danger border-danger mb-3">
        <div class="card-body">
            <p class="card-text" id="error-message">
                @Html.Raw(Model.ExceptionMessage.NewLineToBR())
            </p>
        </div>
    </div>
}
else
{
    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Error</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body class="bg-dark text-white">
        <div class="container mt-5">
            <div class="card text-bg-dark text-danger border-danger mb-3">
                <div class="card-body">
                    <p class="card-text " id="error-message">
                        @Html.Raw(Model.ExceptionMessage.NewLineToBR())
                    </p>
                </div>
            </div>
        </div>
    </body>
    </html>
}
